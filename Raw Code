# to store the data in a dataframe
import pandas 

# to access the api (this library needs to be installed (i.e. with pip or sudo), the others do not)
import requests

# to properly interpret the results of the request
import json

#for optional argument parsing
import sys


import pandas_datareader.data as web
from datetime import datetime

start_time = datetime.datetime(2017, 1, 1)
end_time = datetime.datetime.now()
df = web.DataReader("TSLA", 'morningstar', start_time, end_time)
df.reset_index(inplace=True)
df.set_index("Date", inplace=True)
df = df.drop("Symbol", axis=1)

print(df.head())

print(df.columns())

